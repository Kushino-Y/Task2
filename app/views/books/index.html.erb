<h1 class="title">Books</h1>

<main>
  <table>
    <thead>
      <tr>
        <th class = "a">Title</th>
        <th class = "b">Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_books_path(book.id) %></td>
         <td><%= link_to "Destroy", destroy_books_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>

<div class="sub-title">New book</div>

<%= form_with model:@book, local:true do |f| %>
    
<div class = "item">
  <h5>Title</h5>
  <%= f.text_field :title %>
</div>
<div class = "item">
  <h5>Body</h5>
  <%= f.text_area :body %>
</div>
<div class = "item">
  <%= f.submit 'Create Book' %>
</div>
<% end %>