<h1 class="title">Books</h1>

<main>
  <table>
    <thead>
      <tr>
        <th class = "a">Title</th>
        <th class = "b">Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_books_path(book.id) %></td>
         <td><%= link_to "Destroy", destroy_books_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>

<div class="sub-title">New book</div>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>