</heder>

<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td></td>
         <td></td>
         <td></tr>
         <% end %>
     </tbody>
  </table>
