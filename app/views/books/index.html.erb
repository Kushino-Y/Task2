<heder>
  <h1>Books</h1>
</heder>

<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_books_path(book.id) %></td>
         <td><%= link_to "Destroy", destroy_books_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %></tr>
         <% end %>
     </tbody>
  </table>
</main>

<h1>New book</h1>
<h3></h3>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>