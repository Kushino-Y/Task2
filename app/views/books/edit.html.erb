 <h1 class="title">Editing Book</h1>

    <%= form_with model:@book, local: true do |f| %>
    <div class = "item">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class= "item">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class= "item">
        <%= f.submit 'Update Book' %>
    </div>
    <% end %>
</div>
<div class = "nav">
    <div class = "nav1"><%= link_to "Show", "/books/#{@book.id}" %></div>
    <div class = "nav2"><%= link_to "Back", "/books" %></div>
</div>
   