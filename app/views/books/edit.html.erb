 <h1 class="title">Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4></h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<nav>
    <u class = "nav-list">
        <li class = "nav-list-item"><%= link_to "Show", "/books/#{@book.id}" %></li>
        <li class = "nav-list-item"><%= link_to "Back", "/books" %></li>
    </ul>
</nav>